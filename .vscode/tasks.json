{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Crear carpeta output",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/../output"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "Compilar (build)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-Wextra",
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/../output/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "never",  // No mostrar durante build & run
                "focus": false,
                "panel": "dedicated",
                "clear": true  // Limpiar terminal cada vez
            },
            "detail": "Compila el archivo actual"
        },
        {
            "label": "Ejecutar (run)",
            "type": "shell",
            "command": "${fileDirname}/../output/${fileBasenameNoExtension}",
            "args": [],
            "presentation": {
                "echo": true,
                "reveal": "always",  // SIEMPRE mostrar
                "focus": true,       // Enfocar autom√°ticamente
                "panel": "dedicated",
                "clear": false       // No limpiar para ver toda la salida
            },
            "problemMatcher": []
        },
        {
            "label": "Compilar y Ejecutar (build & run)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Crear carpeta output",
                "Compilar (build)",
                "Ejecutar (run)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "never",   // No mostrar esta tarea intermedia
                "focus": false
            },
            "problemMatcher": []
        }
    ]
}